/* Extra small devices (portrait phones, less than 576px) */
@media (max-width: 575.98px)
{
    .typewriter
    {
        font-size: 18px;
        line-height: 18px;
        font-weight: 100;
        border-right: .15em solid orange;
        letter-spacing: .3em;
    }
    
    .robbespoke
    {
        font-size: 14px;
        line-height: 14px;
        letter-spacing: .3em;
        padding-top: 20px;
    }
    
    .robsince
    {
        font-size: 9px;
        line-height: 9px;
        letter-spacing: .3em;
        padding-top: 7px;
    }
    
    .button-46
    {
        font-size: 10px;
        letter-spacing: .3em;
        line-height: 22px;
        padding: 7px 18px;
        bottom: 15%;
    }
}

