#myVideo {
    position: fixed;
    /* Keeps the video in place even when scrolling */
    right: 0;
    bottom: 0;
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: 100px;
    z-index: -100;
    /* Ensures content is displayed on top of the video */
    object-fit: cover;
    /* Covers the entire viewport while preserving aspect ratio */
}

.text-overlay
{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%); /* Center the text horizontally and vertically */
    color: white; /* Adjust text color as needed */
    font-size: 3rem; /* Adjust font size as needed */
    text-align: center;
}

.text-overlay
{
    z-index: 100;
}

body
{
    margin: 0;
    padding: 0;
    height: 100vh;
}

#banner
{
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
}

#myVideo {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
}

#content {
    position: relative;
    top: 100vh;
    /* Start below the video height */
    padding: 50px;
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
}

.hidden {
    display: none;
    /* Initially hidden completely */
}

